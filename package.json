{
  "name": "bilibili-fans",
  "version": "0.2.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "mock": "vite --mode mock",
    "taze": "taze",
    "release": "bumpp --no-push",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "build:github": "vue-tsc --noEmit && vite build --base /BilibiliFans/",
    "preview:github": "vite preview --base /BilibiliFans/",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "npm run prettier && npm run lint",
    "lint": "eslint --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "clipboard": "^2.0.11",
    "dayjs": "^1.11.5",
    "dom-to-image": "^2.6.0",
    "mockjs": "^1.1.0",
    "pinia": "^2.0.21",
    "rgbaster": "^2.1.1",
    "vue": "^3.2.39",
    "vue-cropper": "^1.0.5"
  },
  "devDependencies": {
    "@iconify-json/uil": "^1.1.2",
    "@types/dom-to-image": "^2.6.4",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.7.14",
    "@types/shelljs": "^0.8.11",
    "@unocss/preset-rem-to-px": "^0.45.13",
    "@vitejs/plugin-legacy": "^2.2.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/eslint-config-typescript": "^11.0.0",
    "bumpp": "^8.2.1",
    "changelogithub": "^0.12.4",
    "eslint": "^8.23.0",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "naive-ui": "^2.33.2",
    "sass": "^1.54.8",
    "taze": "^0.8.1",
    "terser": "^5.15.0",
    "typescript": "^4.8.2",
    "unocss": "^0.45.13",
    "vfonts": "^0.0.3",
    "vite": "^3.0.9",
    "vite-plugin-mock": "^2.9.6",
    "vitest": "^0.22.1",
    "vue-tsc": "^0.39.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  }
}
